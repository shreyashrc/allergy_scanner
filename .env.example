# Secret key for JWT signing. Use a long, random value in production.
SECRET_KEY=your-secret-key-change-in-production

# SQLAlchemy database URL
# SQLite
DATABASE_URL=sqlite+aiosqlite:///allergen_scanner.db


# JWT configuration
ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_ALGORITHM=HS256

# Open Food Facts API base URL (override if needed)
OFF_API_BASE=https://world.openfoodfacts.org/api/v0

# CORS: comma-separated list; use * only for local testing
CORS_ALLOW_ORIGINS=*